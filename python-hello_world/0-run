#!/usr/bin/python

# Check if PYFILE is set
if [ -z "$PYFILE" ]; then
  echo "‚ùå Error: PYFILE environment variable is not set."
  exit 1
fi

# Check if the file exists
if [ ! -f "$PYFILE" ]; then
  echo "‚ùå Error: File '$PYFILE' does not exist."
  exit 1
fi

# Run the Python script
echo "üöÄ Running Python script: $PYFILE"
python3 "$PYFILE"
